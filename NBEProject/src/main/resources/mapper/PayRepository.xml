<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lec.spring.repository.PayRepository">


    <resultMap id="mapUser" type="com.lec.spring.domain.User">
        <result column="id" property="id"/>
        <result column="name" property="username"/>
        <result column="phone" property="phone"/>
    </resultMap>

    <resultMap id="mapAddress" type="com.lec.spring.domain.shop.Address">
        <result column="user_id" property="user_Id"/>
        <result column="isDefault" property="isDefault"/>
        <result column="street_addr" property="street_addr"/>
        <result column="detail_addr" property="detail_addr"/>
        <result column="name" property="name"/>
    </resultMap>


    <select id="selectById" parameterType="int" resultMap="mapUser">
        SELECT
            id,
            name,
            phone
        FROM
            user
        WHERE
            id = #{id}
    </select>



    <select id="selectByDefaultadd" parameterType="int" resultMap="mapAddress">
        SELECT user_id, isDefault, street_addr, detail_addr, name
        FROM address
        WHERE isDefault = true
          AND user_id = #{userId};
    </select>




</mapper>
